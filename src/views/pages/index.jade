extends ../layout/layout


block append head
    link(href='css/home.css', rel='stylesheet', type='text/css')


block content
    section(ng-app)
        div.cities(ng-init="cities = [{'country': 'Costa Rica', 'city': 'Heredia'}, {'country': 'France', 'city': 'Paris'}, {'country': 'United Kingdom', 'city': 'London'}, {'country': 'Japan', 'city': 'Osaka'}]")
            input(type='text' ng-model='query')

            ul
                li(ng-repeat='city in cities | filter:query') {{city.city}} is a city of {{city.country | uppercase}}



block append footer-scripts
    script(src="js/homepage.js")