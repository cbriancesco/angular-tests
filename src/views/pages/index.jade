extends ../layout/layout


block append head
    link(href='css/home.css', rel='stylesheet', type='text/css')


block content
    section(ng-app)
        div.hello__app
            input(type='text' ng-model='name')
            h1 hello {{name}}!

        div.cities(ng-init="cities = ['San José', 'Cartago', 'Alajuela', 'Heredia', 'Puntarenas', 'Limón', 'Guanacaste']")
            ul
                li(ng-repeat='city in cities') {{city}}



block append footer-scripts
    script(src="js/homepage.js")